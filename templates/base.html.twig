<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% block title %}
        <title>{{ 'tuliaCmsDocumentation'|trans({}, 'homepage') }}</title>
    {% endblock %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="{{ asset('/docs/dist/main.css') }}" />
</head>
<body{% if toc is defined %} class="has-toc"{% endif %}>
    <main>
        <header>
            <nav class="navbar navbar-expand-lg bg-light">
                <div class="container-xxl">
                    <a class="navbar-brand" href="{{ path('homepage.localized') }}">
                        <img src="{{ asset('docs/dist/images/tulia-logo.svg') }}" alt="" width="170px" class="d-inline-block align-text-top">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse px-4" id="navbarNav">
                        <div class="row w-100">
                            <div class="col">
                                <ul class="navbar-nav justify-content-start">
                                    <li class="nav-item">
                                        <a class="nav-link active" aria-current="page" href="{{ path('homepage.localized') }}">{{ 'documentation'|trans }}</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="https://tuliacms.org/">Tulia CMS</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col">
                                <ul class="navbar-nav justify-content-end">
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle px-3" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            v.0.1
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="#">v.0.1</a></li>
                                        </ul>
                                    </li>
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle px-3" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            {{ app.request.attributes.get('_locale')|upper }}
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="{{ path('homepage.localized', { _locale: 'pl' }) }}">PL</a></li>
                                            {#<li><a class="dropdown-item" href="{{ path('homepage.localized', { _locale: 'en' }) }}">EN</a></li>#}
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container-xxl">
            <div class="page-container">
                {% if toc is defined %}
                    <aside>
                        {% include 'sidebar.html.twig' %}
                    </aside>
                {% endif %}
                <div class="page-content py-4 my-4">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>
    </main>

    <footer class="footer bg-light">
        <div class="container-xxl">
            <div class="py-3">
                <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                    <li class="nav-item"><a href="https://tuliacms.org/" class="nav-link px-2 text-muted" title="{{ 'goBackToSystemHomepage'|trans }}">Tulia CMS</a></li>
                    <li class="nav-item"><a href="https://github.com/tuliacms/tuliacms" target="_blank" class="nav-link px-2 text-muted" title="{{ 'goToGithubPageProject'|trans }}">Github</a></li>
                </ul>
                <p class="text-center text-muted">Â© 2022 TuliaCMS | Codevia Studio</p>
            </div>
        </div>
    </footer>

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.5.1/styles/default.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.5.1/highlight.min.js"></script>
    <script src="{{ asset('/docs/dist/build.js') }}"></script>
</body>
</html>
