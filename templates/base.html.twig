<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% block title %}
        <title>{{ 'tuliaCmsDocumentation'|trans({}, 'homepage') }}</title>
    {% endblock %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <main>
        <header>
            <nav class="navbar navbar-expand-lg bg-light">
                <div class="container-xxl">
                    <a class="navbar-brand" href="{{ path('homepage.localized') }}">
                        <img src="{{ asset('docs/dist/images/tulia-logo.svg') }}" alt="" width="170px" class="d-inline-block align-text-top">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse px-4" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="{{ path('homepage.localized') }}">{{ 'documentation'|trans }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="https://tuliacms.org/">Tulia CMS</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    v.0.1
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">v.0.1</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    {{ app.request.attributes.get('_locale')|upper }}
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="{{ path('homepage.localized', { _locale: 'pl' }) }}">PL</a></li>
                                    <li><a class="dropdown-item" href="{{ path('homepage.localized', { _locale: 'en' }) }}">EN</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <aside>

        </aside>
        <div class="container-xxl py-4 my-4">
            {% block content %}{% endblock %}
        </div>
    </main>

    <footer class="footer bg-light">
        <div class="container-xxl">
            <div class="py-3">
                <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                    <li class="nav-item"><a href="https://tuliacms.org/" class="nav-link px-2 text-muted" title="{{ 'goBackToSystemHomepage'|trans }}">Tulia CMS</a></li>
                    <li class="nav-item"><a href="https://github.com/tuliacms/tuliacms" target="_blank" class="nav-link px-2 text-muted" title="{{ 'goToGithubPageProject'|trans }}">Github</a></li>
                </ul>
                <p class="text-center text-muted">Â© 2022 TuliaCMS | Codevia Studio</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
</body>
</html>
